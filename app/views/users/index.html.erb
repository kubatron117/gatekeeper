<% content_for :title, "Users" %>


<%= render "shared/primary_container", title: "Users", path: new_user_invitation_path do %>
  <%= render 'shared/flash' %>

  <%= render 'shared/table',
             headers: [
               { attr: nil, label: "Avatar" },
               { attr: nil, label: "First name" },
               { attr: nil, label: "Last name" },
               { attr: nil, label: "Email" },
               { attr: nil, label: "Created at" },
               { attr: nil, label: "Street name" },
               { attr: nil, label: "Street number" },
               { attr: nil, label: "City" },
               { attr: nil, label: "Postal code" },
               { attr: nil, label: "Country" },
               { attr: nil, label: "Actions" }
             ],
             pagination: @users do %>
    <% if @users.any? %>
      <%= render partial: "user_row", collection: @users, as: :user %>
    <% else %>
      <tr>
        <%= render "shared/table_td", value: "No users found." %>
      </tr>
    <% end %>
  <% end %>
<% end %>
