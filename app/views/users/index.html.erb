<% content_for :title, "Users" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Users</h1>
    <%= link_to "New user", new_user_invitation_path,
                class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>

  <%= render 'shared/flash' %>

  <%= render 'shared/table',
             headers: [
               { attr: nil, label: "Avatar" },
               { attr: nil, label: "First name" },
               { attr: nil, label: "Last name" },
               { attr: nil, label: "Email" },
               { attr: nil, label: "Created at" },
               { attr: nil, label: "Street name" },
               { attr: nil, label: "Street number" },
               { attr: nil, label: "City" },
               { attr: nil, label: "Postal code" },
               { attr: nil, label: "Country" },
               { attr: nil, label: "Actions" }
             ],
             pagination: @users do %>
    <% if @users.any? %>
      <%= render partial: "user_row", collection: @users, as: :user %>
    <% else %>
      <tr>
        <td colspan="4" class="text-center py-10 text-gray-500">
          No users found.
        </td>
      </tr>
    <% end %>
  <% end %>
</div>
