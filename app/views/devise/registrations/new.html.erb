<div class="flex min-h-full flex-col items-center justify-center px-6 py-12 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div class="text-center">
      <img
        class="mx-auto h-10 w-auto"
        src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600"
        alt="Your Company"
        />
      <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">
        Sign up for your account
      </h2>
    </div>

    <% resource.build_address unless resource.address %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6", multipart: true }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex items-center justify-center">
        <%= f.label :avatar, class: "block text-sm font-medium text-gray-900 mr-4" do %>
          Avatar
        <% end %>
        <%= f.file_field :avatar, class: "block w-full text-sm text-gray-900 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
      </div>

      <div class="space-y-4">
        <% [:first_name, :last_name, :email, :password, :password_confirmation].each do |attr| %>
          <div>
            <%= f.label attr, class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-1">
              <% case attr when :email %>
                <%= f.email_field attr, autocomplete: "email", required: true, class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm" %>
              <% when :password %>
                <%= f.password_field attr, autocomplete: "new-password", required: true, class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm" %>
                <% if @minimum_password_length %>
                  <p class="text-xs text-gray-500 mt-1">(<%= @minimum_password_length %> characters minimum)</p>
                <% end %>
              <% when :password_confirmation %>
                <%= f.password_field attr, autocomplete: "new-password", required: true, class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm" %>
              <% else %>
                <%= f.text_field attr, required: true, class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="pt-6 border-t border-gray-200 space-y-4">
        <h3 class="text-lg font-medium text-gray-900">Address</h3>
        <%= f.fields_for :address do |a| %>
          <div class="grid grid-cols-1 gap-y-4">
            <div>
              <%= a.label :street_name, class: "block text-sm font-medium text-gray-900" %>
              <div class="mt-1">
                <%= a.text_field :street_name, class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm" %>
              </div>
            </div>
            <div>
              <%= a.label :street_number, class: "block text-sm font-medium text-gray-900" %>
              <div class="mt-1">
                <%= a.text_field :street_number, class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm" %>
              </div>
            </div>
            <div>
              <%= a.label :city, class: "block text-sm font-medium text-gray-900" %>
              <div class="mt-1">
                <%= a.text_field :city, class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm" %>
              </div>
            </div>
            <div>
              <%= a.label :postal_code, class: "block text-sm font-medium text-gray-900" %>
              <div class="mt-1">
                <%= a.text_field :postal_code, class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm" %>
              </div>
            </div>
            <div>
              <%= a.label :country_name, class: "block text-sm font-medium text-gray-900" %>
              <div class="mt-1">
                <%= a.text_field :country_name, class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div>
        <%= f.submit "Sign up", class: "group relative flex w-full justify-center rounded-md bg-indigo-600 py-2 px-4 text-sm font-semibold text-white hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2" %>
      </div>
    <% end %>

    <p class="mt-4 text-center text-sm text-gray-600">
      Already have an account?
      <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
