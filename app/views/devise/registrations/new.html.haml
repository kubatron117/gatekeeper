.flex.min-h-full.flex-col.items-center.justify-center.px-6.py-12.lg:px-8
  .w-full.max-w-md.space-y-8
    .text-center
      %img.mx-auto.h-10.w-auto{
        src: "https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600",
        alt: "Your Company"
      }
      %h2.mt-6.text-3xl.font-bold.tracking-tight.text-gray-900 Sign up for your account

    - resource.build_address unless resource.address

    = simple_form_for resource,
        as: resource_name,
        url: registration_path(resource_name),
        html: { class: "mt-8 space-y-6", multipart: true } do |f|
      = render "devise/shared/error_messages", resource: resource

      .flex.items-center.justify-center
        = f.input :avatar,
          as: :file,
          label_html: { class: "block text-sm font-medium text-gray-900 mr-4" },
          input_html: { accept: "image/png,image/jpeg,image/tiff",
          class: "block w-full text-sm text-gray-900 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" }

      .space-y-4
        = f.input :first_name,
          as: :string,
          required: true,
          input_html: { class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
          maxlength: 100 }
        = f.input :last_name,
          as: :string,
          required: true,
          input_html: { class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
          maxlength: 100 }
        = f.input :email,
          as: :email,
          required: true,
          autocomplete: "email",
          input_html: { class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
          type: "email",
          maxlength: 255 }
        = f.input :password,
          as: :password,
          required: true,
          hint: (@minimum_password_length ? "(#{@minimum_password_length} characters minimum)" : nil),
          autocomplete: "new-password",
          input_html: { class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
          minlength: @minimum_password_length,
          maxlength: 128 }
        = f.input :password_confirmation,
          as: :password,
          required: true,
          autocomplete: "new-password",
          input_html: { class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
          minlength: @minimum_password_length,
          maxlength: 128 }

      .pt-6.border-t.border-gray-200.space-y-4
        %h3.text-lg.font-medium.text-gray-900 Address
        = f.simple_fields_for :address do |a|
          .grid.grid-cols-1.gap-y-4
            = a.input :street_name,
              input_html: { class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
              maxlength: 100 }
            = a.input :street_number,
              input_html: { class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
              maxlength: 20 }
            = a.input :city,
              input_html: { class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
              maxlength: 100 }
            = a.input :postal_code,
              input_html: { class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
              maxlength: 20 }
            = a.input :country_name,
              as: :string,
              input_html: { class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
              maxlength: 100 }

      %div
        = f.button :submit, "Sign up",
          class: "group relative flex w-full justify-center rounded-md bg-indigo-600 py-2 px-4 text-sm font-semibold text-white hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2"

    %p.mt-4.text-center.text-sm.text-gray-600
      Already have an account?
      = link_to "Sign in", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500"
