<div class="space-y-4">
  <% [:current_password, :email, :password, :password_confirmation].each do |attr| %>
    <%= f.input attr,
                as: (attr == :email ? :email : :password),
                required: (attr == :current_password || attr == :email),
                autocomplete: (
                  attr == :email ? "email" :
                    attr == :current_password ? "current-password" :
                      "new-password"
                ),
                label: (attr == :current_password ? t("simple_form.labels.devise.current_password") : nil),
                hint: (attr == :password && minimum_password_length ? "(#{minimum_password_length} characters minimum)" : nil),
                input_html: {
                  autofocus: (attr == :email),
                  class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm"
                } %>
  <% end %>
</div>