<div class="space-y-4">
  <%= f.input :current_password,
              as: :password,
              required: true,
              autocomplete: "current-password",
              label: t("simple_form.labels.devise.current_password"),
              input_html: {
                class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
                minlength: 6,
                maxlength: 128
              } %>

  <%= f.input :email,
              as: :email,
              required: true,
              autocomplete: "email",
              input_html: {
                class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
                type: "email",
                maxlength: 255,
                autofocus: true
              } %>

  <%= f.input :password,
              as: :password,
              required: false,
              autocomplete: "new-password",
              hint: (minimum_password_length ? "(#{minimum_password_length} characters minimum)" : nil),
              input_html: {
                class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
                minlength: minimum_password_length,
                maxlength: 128
              } %>

  <%= f.input :password_confirmation,
              as: :password,
              required: false,
              autocomplete: "new-password",
              input_html: {
                class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
                minlength: minimum_password_length,
                maxlength: 128
              } %>
</div>
