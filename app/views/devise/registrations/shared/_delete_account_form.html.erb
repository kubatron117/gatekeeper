<%= f.input :id, as: :hidden %>

<%= f.input :current_password,
            as: :password,
            required: true,
            label: "Confirm password to close account",
            input_html: {
              class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-red-600 sm:text-sm",
              autocomplete: "current-password",
              minlength: 6,
              maxlength: 128
            } %>

<%= f.button :submit, "Close my account",
             class: "group relative flex w-full justify-center rounded-md bg-red-600 py-2 px-4 text-sm font-semibold text-white hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2" %>
