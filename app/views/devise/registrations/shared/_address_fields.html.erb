<div class="pt-6 border-t border-gray-200 space-y-4">
  <h3 class="text-lg font-medium text-gray-900">Address</h3>
  <%= f.simple_fields_for :address do |a| %>
    <div class="grid grid-cols-1 gap-y-4">
      <%= a.input :street_name,
                  input_html: {
                    class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
                    maxlength: 100
                  } %>
      <%= a.input :street_number,
                  input_html: {
                    class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
                    maxlength: 20
                  } %>
      <%= a.input :city,
                  input_html: {
                    class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
                    maxlength: 100
                  } %>
      <%= a.input :postal_code,
                  input_html: {
                    class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
                    maxlength: 20
                  } %>
      <%= a.input :country_name,
                  as: :string,
                  input_html: {
                    class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600 sm:text-sm",
                    maxlength: 100
                  } %>

      <% if a.object.persisted? %>
        <div class="flex items-center space-x-2 mt-2">
          <%= a.input :_destroy,
                      as: :boolean,
                      label: "Remove address",
                      boolean_label_class: "text-sm text-red-600",
                      input_html: { class: "h-4 w-4 text-red-600" } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
