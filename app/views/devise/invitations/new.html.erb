<% content_for :title, t("devise.invitations.new.header") %>

<%= render "shared/secondary_container", title: t("devise.invitations.new.header") do %>
  <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  placeholder: "E-mail",
                  input_html: {
                    type: "email",
                    maxlength: 255
                  } %>

      <%= f.input :first_name,
                  required: true,
                  placeholder: "First name",
                  input_html: {
                    maxlength: 100
                  } %>

      <%= f.input :last_name,
                  required: true,
                  placeholder: "Last name",
                  input_html: {
                    maxlength: 100
                  } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise.invitations.new.submit_button") %>
    </div>
  <% end %>

  <%= render "shared/action_link_primary",
             name: t("actions.back_to_users", default: "Back to users"),
             path: users_path %>
<% end %>
