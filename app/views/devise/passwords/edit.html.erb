<div class="flex min-h-full flex-col items-center justify-center px-6 py-12 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div class="text-center">
      <img
        class="mx-auto h-10 w-auto"
        src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600"
        alt="Your Company"
        />
      <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">
        Change your password
      </h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
                        html: { method: :put, class: "mt-8 space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.input :reset_password_token, as: :hidden %>

      <div class="space-y-4">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    autocomplete: "new-password",
                    input_html: {
                      class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900
                              outline-1 outline-gray-300 placeholder:text-gray-400
                              focus:outline-2 focus:outline-indigo-600 sm:text-sm",
                      minlength: @minimum_password_length,
                      maxlength: 128
                    },
                    hint: (@minimum_password_length ? "(#{@minimum_password_length} characters minimum)" : nil),
                    hint_html: { class: "block text-sm text-gray-500" },
                    wrapper_html: { class: "" },
                    label_html: { class: "block text-sm font-medium text-gray-900" } %>

        <%= f.input :password_confirmation,
                    label: "Confirm new password",
                    required: true,
                    autocomplete: "new-password",
                    input_html: {
                      class: "block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900
                              outline-1 outline-gray-300 placeholder:text-gray-400
                              focus:outline-2 focus:outline-indigo-600 sm:text-sm",
                      minlength: @minimum_password_length,
                      maxlength: 128
                    },
                    wrapper_html: { class: "" },
                    label_html: { class: "block text-sm font-medium text-gray-900" } %>
      </div>

      <div>
        <%= f.button :submit, "Change my password",
                     class: "group relative flex w-full justify-center rounded-md bg-indigo-600
                             py-2 px-4 text-sm font-semibold text-white hover:bg-indigo-500
                             focus:outline-none focus:ring-2 focus:ring-indigo-600
                             focus:ring-offset-2" %>
      </div>
    <% end %>

    <p class="mt-4 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </p>
  </div>
</div>
