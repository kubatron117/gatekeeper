<% content_for :title, "Projects" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Projects</h1>
    <%= link_to "New project", new_project_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="my-6">
    <%= search_form_for @q, url: projects_path, method: :get, class: "flex flex-col sm:flex-row items-center space-y-2 sm:space-y-0 sm:space-x-2" do |f| %>
      <div class="w-full sm:w-64">
        <%= f.label :name_cont, "Search by name", class: "sr-only" %>
        <%= f.search_field :name_cont, placeholder: "Search by name...", class: "w-full border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <%= f.submit "Search", class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-md" %>
      <%= link_to "Reset", projects_path, class: "px-4 py-2 bg-gray-200 hover:bg-gray-100 text-gray-700 rounded-md" %>
    <% end %>
  </div>

  <div id="projects" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @projects.any? %>
      <% @projects.each do |project| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render project %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", project, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_project_path(project), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", project, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No projects found.</p>
    <% end %>
  </div>

  <%= paginate @projects %>

</div>
